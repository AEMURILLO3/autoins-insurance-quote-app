{
  "modifications": {
    "id": "modifications",
    "title": "Vehicle Modifications",
    "triggerValue": "YES",
    "warningText": "helpText.modificationWarning",
    "fields": [
      {
        "property": "modificationType",
        "label": "fields.modificationType",
        "type": "select",
        "required": true,
        "multiple": true,
        "options": [
          {"value": "PERFORMANCE", "label": "Performance", "trigger": "performance_mods"},
          {"value": "COSMETIC", "label": "Cosmetic/Bodywork", "trigger": "cosmetic_mods"},
          {"value": "SUSPENSION", "label": "Suspension/Chassis", "trigger": "suspension_mods"},
          {"value": "INTERIOR", "label": "Interior", "trigger": "interior_mods"},
          {"value": "AUDIO", "label": "Audio/Electronics", "trigger": "audio_mods"},
          {"value": "SECURITY", "label": "Security", "trigger": "security_mods"}
        ]
      }
    ],
    "subforms": {
      "performance_mods": {
        "id": "performance_mods",
        "title": "Performance Modifications",
        "triggerValue": "PERFORMANCE",
        "fields": [
          {
            "property": "engineMods",
            "label": "Engine Modifications",
            "type": "checkbox",
            "multiple": true,
            "options": [
              {"value": "REMAP", "label": "ECU Remap/Chip Tuning"},
              {"value": "TURBO", "label": "Turbocharger"},
              {"value": "SUPERCHARGER", "label": "Supercharger"},
              {"value": "ENGINE_SWAP", "label": "Engine Swap"},
              {"value": "INTAKE", "label": "Cold Air Intake"},
              {"value": "EXHAUST", "label": "Performance Exhaust"},
              {"value": "DECAT", "label": "Decat/Cat Delete"},
              {"value": "NOS", "label": "Nitrous Oxide System"}
            ]
          },
          {
            "property": "powerIncrease",
            "label": "Estimated Power Increase (%)",
            "type": "number",
            "required": true,
            "min": 0,
            "max": 200
          }
        ]
      },
      "cosmetic_mods": {
        "id": "cosmetic_mods",
        "title": "Cosmetic Modifications",
        "triggerValue": "COSMETIC",
        "fields": [
          {
            "property": "bodyworkMods",
            "label": "Bodywork Modifications",
            "type": "checkbox",
            "multiple": true,
            "options": [
              {"value": "BODY_KIT", "label": "Full Body Kit"},
              {"value": "FRONT_BUMPER", "label": "Front Bumper/Splitter"},
              {"value": "REAR_BUMPER", "label": "Rear Bumper/Diffuser"},
              {"value": "SIDE_SKIRTS", "label": "Side Skirts"},
              {"value": "SPOILER", "label": "Spoiler/Wing"},
              {"value": "WIDE_ARCH", "label": "Wide Arches"},
              {"value": "WRAP", "label": "Full Vehicle Wrap"},
              {"value": "CUSTOM_PAINT", "label": "Custom Paint Job"},
              {"value": "CARBON_PANELS", "label": "Carbon Fiber Panels"}
            ]
          }
        ]
      },
      "suspension_mods": {
        "id": "suspension_mods",
        "title": "Suspension Modifications",
        "triggerValue": "SUSPENSION",
        "fields": [
          {
            "property": "suspensionMods",
            "label": "Suspension Changes",
            "type": "checkbox",
            "multiple": true,
            "options": [
              {"value": "LOWERED", "label": "Lowered Suspension"},
              {"value": "RAISED", "label": "Raised Suspension"},
              {"value": "COILOVERS", "label": "Coilover Kit"},
              {"value": "AIR_RIDE", "label": "Air Ride System"},
              {"value": "ANTI_ROLL", "label": "Anti-Roll Bars"},
              {"value": "STRUT_BRACE", "label": "Strut Brace"}
            ]
          }
        ]
      }
    }
  },
  "claimsDetails": {
    "id": "claimsDetails",
    "title": "Claim Details",
    "triggerValue": "YES",
    "fields": [
      {"property": "claimType", "label": "fields.claimType", "type": "text", "required": true},
      {"property": "claimDate", "label": "fields.claimDate", "type": "date", "required": true},
      {"property": "claimAmount", "label": "fields.claimAmount", "type": "number", "required": true, "min": 0}
    ]
  },
  "convictionDetails": {
    "id": "convictionDetails",
    "title": "Conviction Details",
    "triggerValue": "YES",
    "fields": [
      {"property": "convictionType", "label": "fields.convictionType", "type": "text", "required": true},
      {"property": "convictionDate", "label": "fields.convictionDate", "type": "date", "required": true}
    ]
  }
}
